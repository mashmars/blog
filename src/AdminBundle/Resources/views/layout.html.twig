     user experience. -->
</body>
<!--全局js-->
<script>
    $(function(){
        //左侧一级菜单点击
        $('.treeview').click(function(){
            if(!$(this).hasClass('active')){
                $(this).addClass('active').siblings().removeClass('active');
            }
        })
        //TODO 每个页面对应高亮
        //搜索切换
        $('#search-show').click(function(){
            $('.search-box').toggle();
        })
        //全选和全不选
        $('.ids').click(function(){
            var checked = $(this).prop('checked');
            if(checked){
                $('.id').each(function(){
                    $(this).prop('checked',true);
                })
            }else{
                $('.id').each(function(){
                    $(this).prop('checked',false);
                })
            }
        })
    })
</script>
{% block js %}{% endblock %}
</html>